{
  "compilerOptions": {
    "outDir": "./dist/",
    "noImplicitAny": true,
    "module": "commonjs",
    "target": "es2017",
    "allowJs": true,
    "baseUrl": "src",
    "paths": {
      "@/*": ["*"],
      "utils": ["utils"],
      "mock": ["mock"]
    },
    "sourceMap": true
  },
  "include": ["src/**/*", "__test__"],
  "exclude": ["node_modules"]
}
